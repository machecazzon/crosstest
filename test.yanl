---
apiVersion: futurama.io/v1alpha1
kind: XServiceFactory
metadata:
  name: todo
  labels:
    gruntwork.io/app-name: todo
    gruntwork.io/app-team: todo
    app.kubernetes.io/name: todo
    app.kubernetes.io/instance: todo
    app.kubernetes.io/managed-by: Helm
    ayx: k8s-service
    x-crossplaned-version: todo
  annotations:
    argocd.argoproj.io/sync-wave: "-100"
spec:
  id: todo
  namespace: default
  cloud: gcp
  version: todo-2.0.16
  dbIamUserEnabled: false
  dbEngine: postgres
  instanceName: none
  authProxyEnabled: false
  authProxyContainer:
    maxConnections: 0
    maxSigtermDelay: 180
    resources:
      limits:
        cpu: 350m
        memory: 500Mi
      requests:
        cpu: 100m
        memory: 200Mi
    rolloutStrategy: Workload
  workloadSelectors:
    - name: todo
      type: Deployment
  databaseConfig:
    dbUser: todouser
    dbName: tododb
    dbSecretName: tododb-todouser
    deletionProtection: true
    settings:
      extensions: ["pgcrypto","postgis"]
      connectionLimit: 10
      encoding: UTF8
      lcCollate: en_US.UTF8
      lcCType:  en_US.UTF8
      isTemplate: false
